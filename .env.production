# Production Environment Variables for Vercel

# API Configuration - Update this with your deployed backend URL
REACT_APP_API_URL=https://your-backend-url.herokuapp.com
REACT_APP_API_BASE_URL=https://your-backend-url.herokuapp.com/api

# Build Configuration
GENERATE_SOURCEMAP=false
CI=false

# App Configuration
REACT_APP_NAME=PDF Management System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Complete PDF Management Solution

# Performance Configuration
REACT_APP_MAX_FILE_SIZE=50
REACT_APP_SUPPORTED_FORMATS=pdf,docx,xlsx,pptx

# UI Configuration
REACT_APP_THEME=default
REACT_APP_SHOW_DEBUG=false

# PWA Configuration
REACT_APP_PWA_ENABLED=true

# Development Configuration (disabled for production)
FAST_REFRESH=false
ESLINT_NO_DEV_ERRORS=false
