# Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_BASE_URL=http://localhost:5000/api

# App Configuration
REACT_APP_NAME=PDF Management System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Complete PDF Management Solution

# Build Configuration
GENERATE_SOURCEMAP=false
BUILD_PATH=build

# Development Configuration
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true

# Performance Configuration
REACT_APP_MAX_FILE_SIZE=50
REACT_APP_SUPPORTED_FORMATS=pdf,docx,xlsx,pptx

# UI Configuration
REACT_APP_THEME=default
REACT_APP_SHOW_DEBUG=false

# Analytics (if needed)
# REACT_APP_ANALYTICS_ID=your-analytics-id
# REACT_APP_GTM_ID=your-gtm-id

# Error Reporting (if needed)
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# PWA Configuration
REACT_APP_PWA_ENABLED=true
